package com.bank;

public class BankAccount1  implements BankAccount{
	
	private double balance;
	
	public BankAccount1() {
		
		System.out.println("  Your account is sucessfully created ");
	}
	
	

	public BankAccount1(double balance) {
		super();
		this.balance = balance;
	}



	@Override
	public void deposit(double amount) {
		
		System.out.println("  Thanks for choosing  deposit Option  ");
		 
		amount=amount+balance;
		System.out.println(" Current Balance ->"+ balance+ " After despositing amount => " +amount);
		
	}

	@Override
	public void withdraw(double amount) {
		
		System.out.println("    Thanks for choosing withdraw option  ");
		
	}

	@Override
	public double getBalance() {
		return 0;
	}

}
